---
const { title, description, selectedArticles, papers, resources, link } =
  Astro.props;
---

<div class="card">
  <h4 class="strong">{title}</h4>
  <div class="text">
    {selectedArticles && <b>Selected articles:</b>}
    {selectedArticles && <br />}
    {selectedArticles && selectedArticles.map((data) => <p>{data}</p>)}
    {papers && <b>Paper of the month:</b>}
    {papers && papers.map((paper) => <p>{paper}</p>)}
    {resources && <b>Resources:</b>}
    {resources && resources.map((resource) => <p>{resource}</p>)}
  </div>
  <div class="links-container">
    <a href={link} class="links">
      Read <i class="bi bi-file-arrow-down"></i>
    </a>
  </div>

  <style>
    @import "../../styles/colors.css";

    .card {
      max-width: 400px;
      width: 100%;
      height: min-content;

      display: flex;
      padding: 20px;
      margin-top: calc(2 * var(--border-radius));
      margin-bottom: calc(2 * var(--border-radius));
      flex-direction: column;
      align-items: flex-start;
      gap: 20px;

      border-radius: 10px;
      background: var(--color-white);
      color: var(--dark-text);
    }

    .strong {
      font-weight: 700;
    }

    .text {
      font-size: 0.8em;
    }

    p {
      margin: 0;
      padding: 0;
      font-size: 0.8em;
    }

    .links-container {
      display: inline-flex;
      padding-top: 0px;
      padding-bottom: 0px;
      padding-left: 10px;
      padding-right: 10px;
      align-items: center;
      gap: 20px;

      border-radius: 10px;
      background: var(--gradient-blue);
    }

    .links {
      color: var(--color-white);
      text-decoration: none;
    }
  </style>
</div>
